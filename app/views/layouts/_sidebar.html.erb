<div class="col-xs-12 col-sm-3" id="sidebar">
  <div class="box-sidbar" id="new-posts">
    <div class="top-box-sidebar">
      <h3>Bài viết mới</h3>
    </div>
    <div class="content-box-side-bar">
      <ul class="list-posts list-unstyled">
      <% if @new_posts.present? %>
        <% @new_posts.each do |post| %>
          <li class="post">
          <h3><%= link_to post.title, post.link, target: "_blank" if post.daily? %><%= link_to post.title, category_post_path(post.categories.first, post) if post.normal? %></h3>
          <p><i class="glyphicon glyphicon-time"></i> <%= post.daily? ? post.published_at.in_time_zone(Settings.time_zone).strftime("%I:%M %p %d/%m/%Y") : post.created_at.in_time_zone(Settings.time_zone).strftime("%I:%M %p %d/%m/%Y") %></p>
          <p><i class="glyphicon glyphicon-pencil"></i> <a href="#"><%= post.daily? ? post.author : Settings.author_default %></a></p>
        </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>

    <div class="box-sidbar" id="new-videos">
      <div class="top-box-sidebar">
        <h3>Video mới</h3>
      </div>
      <div class="content-box-side-bar">
        <div class="frame-video">
          <iframe width="100%" height="200px" src="https://www.youtube.com/embed/D3Xh6rDviv0" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    </div>

    <div class="box-sidbar" id="new-album-photo">
      <div class="top-box-sidebar">
        <h3>Album ảnh mới</h3>
      </div>
      <div class="content-box-side-bar">
        <ul class="list-posts list-unstyled">
          <li class="post">
