<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Tran Huy Hoang</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.5&appId=1004885359555624";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


  <%= render "layouts/header" %>
  <div class="content container">
    <div class="row">
        <div class="col-xs-12 col-sm-9" id="primary">
          <% if flash %>
            <% flash.each do |key, msg| %>
              <div class="alert alert-<%= key == :notice ? "info" : "danger" %> alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= msg %>
              </div>
            <% end %>
          <% end %>
          <%= yield %>
        </div>
        <%= render "layouts/sidebar" %>
    </div>
  </div>
  <%= render "layouts/footer" %>
</body>
</html>
