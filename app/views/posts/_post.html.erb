<%= div_for post do %>
  <%= content_tag :h3, link_to(post.title, category_post_path(@category, post), data: {no_turbolink: true}) %>
  <p><span><i class="glyphicon glyphicon-time"></i> <%= post.created_at.strftime "%I:%M %d/%m/%Y" %></span> <span><i class="glyphicon glyphicon-pencil"></i> <%= link_to "Trần Huy Hoàng", "#" %></span></p>
  <div class="row">
    <div class="col-xs-16 col-md-4">
      <%= image_tag post.image.url(:thumb), class: "img-responsive" %>
    </div>
    <div class="col-xs-16 col-md-8">
      <%= sanitize truncate(post.content, :length => 200, escape: false, separator: " ") %>
      <p><strong><%= link_to " Đọc tiếp", category_post_path(@category, post), class: "read-more", data: {no_turbolink: true} %></strong></p>
      <ul class="list-unstyled info-post">
        <li>260 lượt xem</li>
        <li title="Thích"><i class="glyphicon glyphicon-thumbs-up"></i> 13</li>
        <li title="Bình luận"><i class="glyphicon glyphicon-comment"></i> 27</li>
        <li title="Chia sẻ"><i class="glyphicon glyphicon-share-alt"></i> 15</li>
      </ul>
    </div>
  </div>
<% end %>
